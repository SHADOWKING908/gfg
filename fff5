print("Банкомат")
balance = 1000  # Начальный баланс

while True:
    print("\nМеню:")
    print("1. Узнать баланс")
    print("2. Снять 100 руб")
    print("3. Положить 100 руб")
    print("4. Выход")

    # Читаем ввод пользователя
    choice = input("Ваш выбор: ")

    # Обработка выбора
    if choice == "1":
        print(f"Ваш баланс: {balance} руб.")

    elif choice == "2":
        if balance >= 100:
            balance = balance - 100
            print("Успешно снято 100 руб.")
        else:
            print("Ошибка: Недостаточно средств")

    elif choice == "3":
        balance = balance + 100
        print("Успешно внесено 100 руб.")

    elif choice == "4":
        print("Спасибо за использование нашего банкомата! До свидания!")
        break

    else:
        print("Ошибка: Неверная команда. Пожалуйста, выберите 1, 2, 3 или 4.")
